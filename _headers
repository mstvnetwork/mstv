# Ensure channels.json is always fresh and accessible
/channels.json
  Cache-Control: no-cache
  Access-Control-Allow-Origin: *

# Force no caching on any JSON files in case you add more later
/*.json
  Cache-Control: no-cache
  Access-Control-Allow-Origin: *

# Cache static JS and CSS for long-term caching
/*.js
/*.css
  Cache-Control: public, max-age=31536000

# Cache images for a year
/*.png
/*.jpg
/*.jpeg
/*.gif
/*.svg
  Cache-Control: public, max-age=31536000

# Cache HLS streams or other media in a folder if needed
/videos/*
  Cache-Control: public, max-age=31536000

# Optional: prevent caching on root HTML page to always get latest HTML
/index.html
  Cache-Control: no-cache
